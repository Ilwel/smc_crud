    <div class="text-center mt-5">

    <h1 class="text-light">Fichas</h1>

    <a href="/admin/sheets/add"><button class="btn btn-outline-light mt-2">Criar Ficha</button></a>

    </div>

    <div class="d-flex flex-wrap" id="scroll-part">
    
        {{#each sheets}}
        
        
        
        <div class="card bg-dark mt-5 offset-md-1 border-light text-center card-content" style="width: 18rem;">
            
            <div class="card-header">
                <form action="/admin/sheets/del" method="POST">
                    <input type="hidden" name="id" value="{{dataValues.id}}">
                    <button type="submit" class="btn-close btn-close-white offset-md-11"></button>
                </form>
                
                <a class="link-card" href="/admin/sheet/{{dataValues.id}}">
                    <h2 class="text-capitalize text-light mb-4 mt-2" > {{dataValues._player}}</h2>
                </a>
                
                
            </div>
            
            <div class="card-body">
                        
                    <small class="text-light"><strong>Personagem:</strong> {{dataValues._char}}</small>
                    <br>
                    <small class="text-light"><strong>Raça:</strong> {{dataValues._race}}</small>
                    <br>
                    <small class="text-light"><strong>Passado:</strong> {{dataValues._past}}</small>
                    <br>
                    <small class="text-light"><strong>Classe:</strong> {{dataValues._class}}</small>
                    <br>
                    <small class="text-light"><strong>Ofício:</strong> {{dataValues._trade}}</small>
                    <br>
                    <a href="/admin/sheets/edit/{{dataValues.id}}"><button class="btn btn-outline-light mt-4" > Editar</button></a>

            </div>
        </div>
        
        
        
        

        {{else}}

        {{/each}}

    </div>



